<div class="hero">
	<div class="container">
		<div class="row">
			<div class="hero-heading">
				Trouver un développeur pour vos tâches!
				<p>Chercher. Acheter. Résultat. </p>
			</div>
		</div>
		<div class="row">
			<div class="col-md-offset-3 col-md-6">
				<form method="post" action="/search">
					<div class="input-group input-group-lg">
						<input type="text" class="form-control" name="search_input" placeholder="Que rechercher vous ?...">
						<span class="input-group-btn">
							<input type="submit" class="btn btn-success" value="Rechercher">
						</span>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<div class="container section">
	<h1>
		Nouveaux Services
	</h1>
	<div class="row">
		<div class="col-md-3">
			<div class="gig-card">
				<img src="/img/blog.jpg" />
				<h4>
					Je peux vous crée un blog
				</h4>
				<h3>
					$3
				</h3>
			</div>
		</div>
		<div class="col-md-3">
			<div class="gig-card">

				<img src="/img/data.jpg" />
				<h4>
					Je peux gérer vos base de données
				</h4>
				<h3>
					$3
				</h3>
			</div>
		</div>
		<div class="col-md-3">
			<div class="gig-card">

				<img src="/img/copywrite.jpg" />
				<h4>
					Je peux vous crée un site Wordpress
				</h4>
				<h3>
					$3
				</h3>
			</div>
		</div>
		{{#each gigs}}
		<div class="col-md-3">
			<div class="gig-card">

				<a href="/service_detail/{{ _id}}"/><img src="/img/copywrite.jpg" /></a>
				<h4>
					{{ title }}
				</h4>
				<h3>
				${{ price }}
				</h3>
			</div>
		</div>
		{{/each}}

	</div>
</div>
